pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Brendanofawesome/WeatherStationTropez'
            }
        }

        stage('Build C++') {
            steps {
                sh '''
                g++ -o src/main.exe src/main.cpp
                '''
            }
        }

        stage('Run Python Tests') {
            steps {
                sh '''
                python3 -m pip install --upgrade pip
                pip install pytest
                pytest --junitxml=test-results/results.xml
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'build/**', allowEmptyArchive: true
            junit '**/test-results/*.xml'
        }
    }
}